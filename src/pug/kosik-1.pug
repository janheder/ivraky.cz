doctype html
include template/_variables.pug  
html(lang=lang)
    - var slug = "kosik-1";
    include template/_head.pug  
    body.cart
        include components/_modal-login.pug

        include components/_header.pug

        main
            section.cart-heading
                .container
                    .cart-heading__item.--active
                        .cart-heading__icon 1
                        .cart-heading__title Nákupní košík
                    .cart-heading__item
                        .cart-heading__icon 2
                        .cart-heading__title Doprava a platba
                    .cart-heading__item
                        .cart-heading__icon 3
                        .cart-heading__title Osobní údaje
                    .cart-heading__item
                        .cart-heading__icon 4
                        .cart-heading__title Shrnutí objednávky


            section.cart-content
                
                .container
                    .row 
                        .col-12.col-md-8
                            .cart-table
                                form.cart-content__form(method="post" id="cart-form")
                                    .cart-table__title Zboží v košíku

                                    .cart-table-items    

                                            .cart-item 
                                                .cart-item-thumb-wrap
                                                    .cart-item-thumb
                                                        img(src="/img/product-thumb-medium.jpg" alt="#" title="#")
                                                .cart-item-content 
                                                    .cart-item-main     
                                                        a.cart-item-name(href="produkt-detail.html") #{ProductName}
                                                            .cart-item-stock.--available #[img(src="/img/icons/check.svg" alt="Skladem 10 ks")]Skladem 10 ks

                                                        .cart-item-stepper.stepper 
                                                            span.minus –
                                                            input(id="qty-stepper-input-1" class="num_items" type="number" value="1" min="1" max="100" step="1" aria-label="Počet položek" required) 
                                                            span.plus +

                                                        a.cart-item-remove(href="#")   
                                                            .cart-item-remove-icon
                                                                img(src="/img/icons/cross-alt.svg" alt="Odstranit z košíku")

                                                        .cart-item-prices
                                                            .cart-item-price-pc #[span 520] Kč/ks
                                                            .cart-item-price #[span 520] Kč


                                            .cart-item 
                                                .cart-item-thumb-wrap
                                                    .cart-item-thumb
                                                        img(src="/img/product-thumb-medium.jpg" alt="#" title="#")
                                                .cart-item-content 
                                                    .cart-item-main     
                                                        a.cart-item-name(href="produkt-detail.html") #{ProductName}
                                                            .cart-item-stock.--available #[img(src="/img/icons/check.svg" alt="Skladem 10 ks")]Skladem 10 ks

                                                        .cart-item-stepper.stepper 
                                                            span.minus –
                                                            input(id="qty-stepper-input-1" class="num_items" type="number" value="1" min="1" max="100" step="1" aria-label="Počet položek" required) 
                                                            span.plus +

                                                        a.cart-item-remove(href="#")   
                                                            .cart-item-remove-icon
                                                                img(src="/img/icons/cross-alt.svg" alt="Odstranit z košíku")

                                                        .cart-item-prices
                                                            .cart-item-price-pc #[span 520] Kč/ks
                                                            .cart-item-price #[span 520] Kč


                                    .cart-aside__free-shipping(id="cartFreeShipping" data-price="5000") Nakupte ještě za 3000 Kč a máte dopravu zdarma
                                   
                                    details
                                        summary Mám slevový kód
                                        form.cart-aside__code(method="post")
                                            .form-group 
                                       
                                                .cart-aside__codeInner
                                                    input(type="text" id="code" name="code")
                                                    button.btn Použít


                                    .cart-table__footer
                                        a.cart-table__footer-link(href="/") 
                                            .cart-table__footer-icon
                                                img(src="/img/icons/cheveron.svg" alt="Zpět do obchod")
                                            .cart-table__footer-text Zpět do obchodu

                                        button.btn.--cart(name="nextstep" form="cart-form") Doprava a platba #[img(src="/img/icons/cheveron.svg" alt="Pokračovat")]


                        .col-12.col-md-4 
                            aside.cart-aside
                                .cart-aside__title Shrnutí objednávky
                                .cart-aside__table 
                                    .cart-aside__row 
                                        .cart-aside__table-tr Doprava
                                        .cart-aside__table-th Česká pošta
                                        .cart-aside__table-td 99 Kč

                                    .cart-aside__row 
                                        .cart-aside__table-tr Způsob platby
                                        .cart-aside__table-th Kartou
                                        .cart-aside__table-td 0 Kč

                                    .cart-aside__row.--main 
                                        .cart-aside__table-th Celková cena
                                        .cart-aside__table-td 
                                            div #[span(id="sumprice") 1570] Kč 
                                            small 1570 včetně DPH



                                .cart-aside__free-shipping Nakupte ještě za 6 237 Kč a máte dopravu zdarma
                                .cart-aside__login 
                                    .cart-aside__login-content 
                                        .cart-aside__login-title Potřebujete s něčím poradit?
                                        .cart-aside__login-text Rádi vám pomůžeme. Po–Pá 9:00–17:00.

                                        a.cart-aside__login-contact(href="tel:+420713859698") #[img(src="/img/icons/phone.svg")] +420 713 859 698
                                        a.cart-aside__login-contact(href="mailto:info@email.cz") #[img(src="/img/icons/envelope.svg")] info@email.cz        






            include components/_contact-section.pug


        
        include components/_footer.pug

        include template/_scripts.pug  

        script(src="/js/cart.js")